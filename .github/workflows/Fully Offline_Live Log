name: Build Firmware and Publish Log

on:
  workflow_dispatch:
  push:
    paths:
      - 'src/**'

jobs:
  build-and-publish:
    runs-on: ubuntu-latest
    env:
      IMAGE: ghcr.io/dmitry-akva/esp8266-platformio:offline-latest

    steps:
      # 1️⃣ Клонируем main, чтобы работать с кодом
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          persist-credentials: false

      # 2️⃣ Авторизация в GHCR
      - name: Log in to GitHub Container Registry
        uses: docker/login-action@v3
        with:
          registry: ghcr.io
          username: ${{ github.actor }}
          password: ${{ secrets.GHCR_PAT }}

      # 3️⃣ Pull образа (если есть)
      - name: Pull offline Docker image
        run: docker pull $IMAGE || true

      # 4️⃣ Определяем число параллельных задач
      - name: Determine number of build jobs
        id: set_jobs
        run: |
          JOBS=$(nproc 2>/dev/null || echo 4)
          echo "jobs=$JOBS" >> $GITHUB_OUTPUT

      # 5️⃣ Сборка прошивки полностью offline + лог в html
      - name: Build firmware and generate HTML log
        run: |
          JOBS=${{ steps.set_jobs.outputs.jobs }}
          echo "Running PlatformIO fully offline with -j $JOBS"

          # Сборка и генерация HTML лога
          docker run --rm \
            --network none \
            -v ${{ github.workspace }}:/workspace \
            -w /workspace \
            $IMAGE \
            bash -lc "pio run -v -j $JOBS" 2>&1 \
            | sed 's/$/<br>/' > build-log.html

      # 6️⃣ Публикация build-log.html в gh-pages
      - name: Publish build log to gh-pages
        env:
          GH_PAT: ${{ secrets.GH_PAT }}
        run: |
          git config --global user.name "github-actions"
          git config --global user.email "actions@github.com"

          # Клонируем gh-pages ветку
          git clone --single-branch --branch gh-pages https://x-access-token:${GH_PAT}@github.com/${{ github.repository }} gh-pages
          cd gh-pages

          # Копируем новый лог
          cp ../build-log.html ./build-log.html

          git add build-log.html
          git commit -m "Update build log [ci skip]" || echo "No changes"
          git push origin gh-pages
