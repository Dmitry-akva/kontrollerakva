name: Build Firmware (Offline Docker)

on:
  workflow_dispatch:  # ручной запуск

env:
  IMAGE: ghcr.io/dmitry-akva/esp8266-platformio:latest  # тег образа
  PIO_ENV: nodemcuv2  # окружение PlatformIO

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      # 1️⃣ Проверка исходного кода
      - name: Checkout repository
        uses: actions/checkout@v4

      # 2️⃣ Логинимся в GHCR (если образ приватный)
      - name: Log in to GitHub Container Registry
        uses: docker/login-action@v3
        with:
          registry: ghcr.io
          username: ${{ github.actor }}
          password: ${{ secrets.GHCR_PAT }}

      # 3️⃣ Сборка прошивки внутри offline контейнера
      - name: Build firmware inside offline container
        run: |
          mkdir -p build_out
          docker run --rm \
            -v ${{ github.workspace }}:/workspace \
            -v ${{ github.workspace }}/build_out:/out \
            -w /workspace \
            $IMAGE \
            bash -lc "\
              set -euo pipefail; \
              echo '=== LIST /opt/pio-libdeps in image ==='; ls -la /opt/pio-libdeps || true; \
              echo '=== LIST /opt/pio-cache in image (global .platformio) ==='; ls -la /opt/pio-cache || true; \
              echo '=== Project libdeps BEFORE copy ==='; ls -la .pio/libdeps || true; \
              # Копируем все предзагруженные env-папки в .pio/libdeps \
              if [ -d /opt/pio-libdeps ]; then \
                mkdir -p .pio/libdeps; \
                for d in /opt/pio-libdeps/*; do \
                  if [ -d \"$d\" ]; then \
                    echo cp -a \"$d\" .pio/libdeps/; cp -a \"$d\" .pio/libdeps/ || true; \
                  fi; \
                done; \
              fi; \
              # Копируем глобальный кеш PlatformIO \
              if [ -d /opt/pio-cache/.platformio ]; then \
                mkdir -p /root/.platformio; cp -a /opt/pio-cache/.platformio/* /root/.platformio/ 2>/dev/null || true; \
              fi; \
              echo '=== Project libdeps AFTER copy ==='; ls -la .pio/libdeps || true; \
              # Собираем прошивку \
              pio run -e $PIO_ENV -v -j 4; \
              # Копируем бинарники наружу \
              mkdir -p /out; cp .pio/build/$PIO_ENV/*.bin /out/ 2>/dev/null || true; cp .pio/build/$PIO_ENV/*.hex /out/ 2>/dev/null || true; \
            "

      # 4️⃣ Загружаем бинарник прошивки как артефакт Actions
      - name: Upload firmware binary
        uses: actions/upload-artifact@v4
        with:
          name: firmware
          path: build_out/*.bin
