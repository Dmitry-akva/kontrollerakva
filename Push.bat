if "%STATUS%"=="in_progress" (
    echo ‚è≥ Workflow –≤—ã–ø–æ–ª–Ω—è–µ—Ç—Å—è, –∂–¥—ë–º %WAIT_TIME% —Å–µ–∫—É–Ω–¥...
