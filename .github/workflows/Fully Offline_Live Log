name: Build Firmware (Fully Offline+log)

on:
  workflow_dispatch:

jobs:
  build-offline:
    runs-on: ubuntu-latest
    env:
      IMAGE: ghcr.io/dmitry-akva/esp8266-platformio:offline-latest

    steps:
      - name: Checkout main branch
        uses: actions/checkout@v4
        with:
          persist-credentials: false

      - name: Login to GHCR
        uses: docker/login-action@v3
        with:
          registry: ghcr.io
          username: ${{ github.actor }}
          password: ${{ secrets.GHCR_PAT }}

      - name: Pull offline Docker image
        run: docker pull $IMAGE || true

      - name: Set build jobs
        id: jobs
        run: echo "jobs=$(nproc 2>/dev/null || echo 4)" >> $GITHUB_OUTPUT

      # ================= BUILD =================
      - name: Build firmware + save log
        run: |
          JOBS=${{ steps.jobs.outputs.jobs }}
          echo "Running PlatformIO fully offline with -j $JOBS"

          docker run --rm \
            --network none \
            -v ${{ github.workspace }}:/workspace \
            -w /workspace \
            $IMAGE \
            bash -lc "pio run -v -j $JOBS" 2>&1 | tee build-log.txt

      - name: Upload firmware
        uses: actions/upload-artifact@v4
        with:
          name: firmware
          path: .pio/build/**/firmware*.bin

      # ================= PUSH LOG TO PAGES =================
      - name: Publish build log to gh-pages
        env:
          GH_PAT: ${{ secrets.GH_PAT }}
        run: |
          git config --global user.name "github-actions"
          git config --global user.email "github-actions@github.com"

          # Клонируем gh-pages с правами на push
          git clone https://x-access-token:${GH_PAT}@github.com/${{ github.repository }} pages
          cd pages
          git checkout gh-pages || git checkout -b gh-pages

          # Копируем новый лог
          cp ../build-log.txt ./build-log.txt

          git add build-log.txt
          git commit -m "Update build log [ci skip]" || echo "No changes"

          git push https://x-access-token:${GH_PAT}@github.com/${{ github.repository }} gh-pages
